<h2>Resumir Vídeo do YouTube</h2>
<form action="/video" method="POST">
  <div class="mb-3">
    <input type="text" name="url" class="form-control" placeholder="Link do vídeo" value="<%= url %>" required>
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
<% if (result) { %>
  <h3 class="mt-4">Resumo</h3>
  <pre class="result"><%= result %></pre>
<% } %>

