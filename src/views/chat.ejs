<h2>Chat com Assistente</h2>
<form action="/chat" method="POST">
  <div class="mb-3">
    <textarea name="message" class="form-control" rows="4" placeholder="Digite sua pergunta"><%= message %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
<% if (result) { %>
  <h3 class="mt-4">Resposta</h3>
  <pre class="result"><%= result %></pre>
<% } %>

