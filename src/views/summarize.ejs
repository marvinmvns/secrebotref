<h2>Resumir Texto ou Arquivo</h2>
<form action="/summarize" method="POST" enctype="multipart/form-data">
  <div class="mb-3">
    <textarea name="text" class="form-control" rows="4" placeholder="Cole o texto aqui"></textarea>
  </div>
  <div class="mb-3">
    <input type="file" name="file" class="form-control" accept=".pdf,.txt,.docx,.csv">
  </div>
  <button type="submit" class="btn btn-primary">Enviar</button>
</form>
<% if (result) { %>
  <h3 class="mt-4">Resumo</h3>
  <pre class="result"><%= result %></pre>
<% } %>

